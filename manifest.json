{
    "manifest_version": 2,
    "name": "Anki單字卡擷取介面",
    "description": "簡便的增加anki單字卡",
    "version": "1.0.2",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts" : ["background.js"]
    },
	"content_scripts" : [
		{
			"matches" : ["*://*/*"],
			"js" : ["jquery.min.js", "content.js"]
		}
	],
    "permissions": [
        "activeTab", "tabs", "downloads"
    ]
}
